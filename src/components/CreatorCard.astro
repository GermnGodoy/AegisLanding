---
interface Props {
  name: string;
  email: string;
  description: string;
  photo: string;
  linkedin: string;
}

const { name, email, description, photo, linkedin } = Astro.props;
---

<a 
  href={linkedin}
  target="_blank"
  rel="noopener noreferrer"
  class="block bg-black border-2 border-gray-300/30 rounded-xl p-6 hover:border-amber-400 transition-all duration-300 group cursor-pointer hover:transform hover:scale-105 hover:shadow-lg hover:shadow-amber-400/20"
>
  <!-- Photo -->
  <div class="flex justify-center mb-4">
    <div class="w-24 h-24 bg-amber-400 rounded-full flex items-center justify-center overflow-hidden">
      <img 
        src={photo} 
        alt={`${name} - Aegis team member`}
        class="w-full h-full object-cover"
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
      />
      <!-- Fallback avatar -->
      <div class="w-full h-full bg-amber-400 flex items-center justify-center text-black font-bold text-2xl hidden">
        {name.charAt(0).toUpperCase()}
      </div>
    </div>
  </div>

  <!-- Name -->
  <h3 class="text-xl font-bold text-white text-center mb-0 group-hover:text-amber-300 transition-colors flex flex-row items-center justify-center gap-2">
    {name}
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
  </h3>

  <!-- Description -->
  <p class="text-gray-300 text-center text-sm leading-relaxed mb-2">
    {description}
  </p>
  <!-- LinkedIn -->

  <!-- Email -->
  <p class="text-amber-300 text-center mb-3 text-sm">
    <span class="hover:text-amber-400 transition-colors">
      {email}
    </span>
  </p>


</a>